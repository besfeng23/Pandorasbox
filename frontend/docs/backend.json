
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "name": {
          "type": "string",
          "description": "The user's display name."
        }
      },
      "required": ["email"]
    },
    "Thread": {
      "title": "Thread",
      "description": "A conversation thread between a user and an agent.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "agent": { "type": "string", "enum": ["builder", "universe"] },
        "name": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "version": { "type": "number" },
        "history": {
          "type": "array",
          "items": { "$ref": "#/entities/ChangeHistoryItem" }
        }
      },
      "required": ["userId", "agent", "name", "createdAt", "updatedAt", "version"]
    },
    "Message": {
      "title": "Message",
      "description": "A single message within a thread.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "role": { "type": "string", "enum": ["user", "assistant"] },
        "content": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "isError": { "type": "boolean" },
        "confidence": { "type": "number" },
        "toolUsages": {
          "type": "array",
          "items": { "$ref": "#/entities/ToolUsage" }
        },
        "history": {
          "type": "array",
          "items": { "$ref": "#/entities/ChangeHistoryItem" }
        }
      },
      "required": ["userId", "role", "content", "createdAt", "history"]
    },
    "ToolUsage": {
      "title": "Tool Usage",
      "description": "Represents a single tool usage by an agent.",
      "type": "object",
      "properties": {
        "toolName": { "type": "string" },
        "input": { "type": "object" },
        "output": { "type": "object" },
        "citation": { "type": "string" }
      },
      "required": ["toolName", "input", "output"]
    },
    "ChangeHistoryItem": {
      "title": "Change History Item",
      "description": "An entry in the change history of a document.",
      "type": "object",
      "properties": {
        "timestamp": { "type": "string", "format": "date-time" },
        "userId": { "type": "string" },
        "action": { "type": "string" },
        "changes": { "type": "object" }
      },
      "required": ["timestamp", "userId", "action"]
    },
    "Memory": {
      "title": "Memory",
      "description": "Represents a durable memory extracted from a conversation.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "fact",
            "preference",
            "commitment",
            "person",
            "place"
          ]
        },
        "content": {
          "type": "string"
        },
        "relevance": {
          "type": "number",
          "description": "A score from 0 to 1 indicating the relevance of the memory."
        },
        "confidence": {
          "type": "number",
          "description": "A score from 0 to 1 indicating the AI's confidence in the extracted memory."
        },
        "sourceMessageId": {
          "type": "string",
          "description": "The ID or snippet of the message from which this memory was extracted."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "number"
        },
        "history": {
          "type": "array",
          "items": {
            "$ref": "#/entities/ChangeHistoryItem"
          }
        }
      },
      "required": [
        "userId",
        "type",
        "content",
        "relevance",
        "createdAt",
        "version",
        "history",
        "confidence"
      ]
    },
    "CustomAgent": {
      "title": "Custom Agent",
      "description": "Represents a user-defined custom AI agent.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "agentName": { "type": "string" },
        "description": { "type": "string" },
        "systemPrompt": { "type": "string" },
        "behaviorRules": { "type": "string" },
        "domainConstraints": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "version": { "type": "number" },
        "history": {
          "type": "array",
          "items": { "$ref": "#/entities/ChangeHistoryItem" }
        }
      },
      "required": ["userId", "agentName", "description", "createdAt", "updatedAt", "version", "history"]
    },
    "UserConnector": {
      "title": "User Connector",
      "description": "Represents a user's connection to a data source.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["connected", "error", "disconnected"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "metadata": {
          "type": "object",
          "properties": {
            "url": { "type": "string" }
          }
        }
      },
      "required": ["userId", "status", "createdAt", "updatedAt"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile information."
    },
    "/threads/{threadId}": {
      "schema": { "$ref": "#/entities/Thread" },
      "description": "Stores conversation threads."
    },
    "/threads/{threadId}/messages/{messageId}": {
      "schema": { "$ref": "#/entities/Message" },
      "description": "Stores messages within a thread."
    },
    "/users/{userId}/memories/{memoryId}": {
      "schema": { "$ref": "#/entities/Memory" },
      "description": "Stores durable memories extracted for a user."
    },
    "/users/{userId}/agents/{agentId}": {
      "schema": { "$ref": "#/entities/CustomAgent" },
      "description": "Stores custom agents created by a user."
    },
    "/users/{userId}/connectors/{connectorId}": {
      "schema": {
        "$ref": "#/entities/UserConnector"
      },
      "description": "Stores the status of data connectors for a user."
    }
  }
}
