rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /threads/{threadId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      match /messages/{messageId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/threads/$(threadId)).data.userId == request.auth.uid;
      }
    }

    match /users/{userId}/memories/{memoryId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/agents/{agentId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/connectors/{connectorId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
